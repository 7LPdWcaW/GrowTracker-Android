<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clipToPadding="false"
		android:fillViewport="true"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clipToPadding="false"
			android:orientation="vertical"
			android:paddingBottom="96dp"
		>
			<com.google.android.material.card.MaterialCardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			>
				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="16dp"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/header"
						android:text="@string/add_diary_environment_title"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						android:textAppearance="@style/Text.Header"
					/>

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/environment_type"
						android:hint="@string/add_diary_environment_type"
						android:layout_marginTop="@dimen/section_spacing"
						app:layout_constraintTop_toBottomOf="@+id/header"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						style="@style/Dropdown"
					>
						<me.anon.grow3.view.DropDownEditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/environment_type_options"
							app:singleSelection="true"
						/>
					</com.google.android.material.textfield.TextInputLayout>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/size_header"
						android:text="@string/add_diary_environment_size_title"
						app:layout_constraintTop_toBottomOf="@id/environment_type"
						app:layout_constraintStart_toStartOf="parent"
						android:layout_marginTop="@dimen/section_header_spacing"
						android:textAppearance="@style/Text.Header.Sub"
					/>

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/environment_size_width"
						android:hint="@string/add_diary_environment_size_width"
						android:layout_marginEnd="6dp"
						android:layout_marginTop="@dimen/section_spacing"
						app:layout_constraintTop_toBottomOf="@id/size_header"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintEnd_toStartOf="@+id/environment_size_width_unit"
					>
						<EditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:inputType="number"
						/>
					</com.google.android.material.textfield.TextInputLayout>

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/environment_size_width_unit"
						android:layout_marginStart="6dp"
						android:layout_marginTop="@dimen/section_spacing"
						app:layout_constraintTop_toBottomOf="@id/size_header"
						app:layout_constraintStart_toEndOf="@+id/environment_size_width"
						app:layout_constraintEnd_toEndOf="parent"
						style="@style/Dropdown"
					>
						<me.anon.grow3.view.DropDownEditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							app:singleSelection="true"
							app:menu="@menu/distance_units"
						/>
					</com.google.android.material.textfield.TextInputLayout>

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/environment_size_height"
						android:hint="@string/add_diary_environment_size_height"
						android:layout_marginTop="@dimen/section_spacing"
						android:layout_marginEnd="6dp"
						app:layout_constraintTop_toBottomOf="@id/environment_size_width"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintEnd_toStartOf="@+id/environment_size_height_unit"
					>
						<EditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:inputType="number"
						/>
					</com.google.android.material.textfield.TextInputLayout>

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/environment_size_height_unit"
						android:layout_marginTop="@dimen/section_spacing"
						android:layout_marginStart="6dp"
						app:layout_constraintTop_toBottomOf="@id/environment_size_width"
						app:layout_constraintStart_toEndOf="@+id/environment_size_height"
						app:layout_constraintEnd_toEndOf="parent"
						style="@style/Dropdown"
					>
						<me.anon.grow3.view.DropDownEditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							app:singleSelection="true"
							app:menu="@menu/distance_units"
						/>
					</com.google.android.material.textfield.TextInputLayout>

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/environment_size_depth"
						android:hint="@string/add_diary_environment_size_depth"
						android:layout_marginTop="@dimen/section_spacing"
						android:layout_marginEnd="6dp"
						app:layout_constraintTop_toBottomOf="@id/environment_size_height"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintEnd_toStartOf="@+id/environment_size_depth_unit"
					>
						<EditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:inputType="number"
						/>
					</com.google.android.material.textfield.TextInputLayout>

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/environment_size_depth_unit"
						android:layout_marginStart="6dp"
						android:layout_marginTop="@dimen/section_spacing"
						app:layout_constraintTop_toBottomOf="@id/environment_size_height"
						app:layout_constraintStart_toEndOf="@+id/environment_size_depth"
						app:layout_constraintEnd_toEndOf="parent"
						style="@style/Dropdown"
					>
						<me.anon.grow3.view.DropDownEditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							app:singleSelection="true"
							app:menu="@menu/distance_units"
						/>
					</com.google.android.material.textfield.TextInputLayout>
				</androidx.constraintlayout.widget.ConstraintLayout>
			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			>
				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="16dp"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/header"
						android:text="@string/add_diary_light_title"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						android:textAppearance="@style/Text.Header"
					/>

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/light_type"
						android:hint="@string/add_diary_light_type"
						android:layout_marginTop="@dimen/section_spacing"
						app:layout_constraintTop_toBottomOf="@+id/header"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						style="@style/Dropdown"
					>
						<me.anon.grow3.view.DropDownEditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/light_type_options"
							app:singleSelection="true"
						/>
					</com.google.android.material.textfield.TextInputLayout>

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/light_wattage"
						android:hint="@string/add_diary_light_wattage"
						android:layout_marginTop="@dimen/section_spacing"
						app:layout_constraintTop_toBottomOf="@id/light_type"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
					>
						<EditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:inputType="numberDecimal"
							android:maxLines="1"
							android:singleLine="true"
						/>
					</com.google.android.material.textfield.TextInputLayout>

					<com.google.android.material.textfield.TextInputLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/light_brand"
						android:hint="@string/add_diary_light_description"
						android:layout_marginTop="@dimen/section_spacing"
						app:layout_constraintTop_toBottomOf="@id/light_wattage"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
					>
						<EditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:inputType="text"
							android:maxLines="1"
							android:singleLine="true"
						/>
					</com.google.android.material.textfield.TextInputLayout>
				</androidx.constraintlayout.widget.ConstraintLayout>
			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			>
				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="16dp"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/header"
						android:text="@string/add_diary_schedule_title"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						android:textAppearance="@style/Text.Header"
					/>
				</androidx.constraintlayout.widget.ConstraintLayout>
			</com.google.android.material.card.MaterialCardView>
		</LinearLayout>
	</ScrollView>
</FrameLayout>
