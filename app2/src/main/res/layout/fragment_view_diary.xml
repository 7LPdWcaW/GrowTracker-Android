<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
>
	<com.google.android.material.appbar.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="256dp"
		android:id="@+id/toolbar_layout"
		android:background="?colorPrimary"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
	>
		<com.google.android.material.appbar.SubtitleCollapsingToolbarLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/collapsing_toolbar_layout"
			app:contentScrim="?attr/colorPrimary"
			app:layout_scrollFlags="scroll|exitUntilCollapsed"
			app:expandedTitleMarginStart="16dp"
		>
			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/sample"
				android:scaleType="centerCrop"
				android:adjustViewBounds="true"
				app:layout_collapseMode="parallax"
				android:tint="#2F000000"
			/>

			<com.google.android.material.appbar.MaterialToolbar
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:id="@+id/toolbar"
				app:layout_collapseMode="pin"
				app:navigationIcon="@drawable/ic_arrow_back"
			/>
		</com.google.android.material.appbar.SubtitleCollapsingToolbarLayout>
	</com.google.android.material.appbar.AppBarLayout>

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@android:drawable/ic_menu_camera"
		app:layout_anchor="@id/toolbar_layout"
		app:layout_anchorGravity="bottom|end"
		android:visibility="gone"
	/>

	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/content"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clipToPadding="false"
			android:orientation="vertical"
			android:paddingBottom="72dp"
		>
			<com.google.android.material.card.MaterialCardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/section_spacing"
			>
				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="16dp"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/stages_header"
						android:text="@string/add_diary_stages_title"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						android:layout_marginBottom="0dp"
						android:textAppearance="@style/Text.Header"
					/>

					<me.anon.grow3.view.StageView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/stages_view"
						app:layout_constraintTop_toBottomOf="@id/stages_header"
						android:layout_marginTop="@dimen/section_header_spacing"
					/>
				</androidx.constraintlayout.widget.ConstraintLayout>
			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/Card"
			>
				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="16dp"
					android:paddingStart="16dp"
					android:paddingBottom="16dp"
					android:paddingEnd="8dp"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/crops_title"
						android:text="@string/view_diary_crops_title"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						style="@style/Text.Header"
					/>

					<com.google.android.flexbox.FlexboxLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/crops_container"
						android:orientation="horizontal"
						android:layout_marginTop="@dimen/section_spacing"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toBottomOf="@id/crops_title"
						app:layout_constraintEnd_toStartOf="@id/more_crops"
						app:layout_constraintBottom_toBottomOf="parent"
						app:flexDirection="row"
						app:flexWrap="wrap"
						app:maxLine="1"
						app:dividerDrawable="@drawable/spacer_16dp"
						app:dividerDrawableVertical="@drawable/spacer_16dp"
						app:showDivider="middle"
						app:showDividerVertical="middle"
					/>

					<ImageView
						android:layout_width="56dp"
						android:layout_height="56dp"
						android:id="@+id/more_crops"
						android:background="?actionBarItemBackground"
						android:clickable="true"
						android:focusable="true"
						android:padding="16dp"
						app:srcCompat="@drawable/ic_arrow_forward"
						app:tint="@color/text_surface_color"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintTop_toBottomOf="@id/crops_title"
						app:layout_constraintBottom_toBottomOf="parent"
					/>
				</androidx.constraintlayout.widget.ConstraintLayout>
			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/Card"
			>
				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="16dp"
				>
					<com.google.android.material.textview.MaterialTextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/view_logs"
						android:text="View logs"
						android:drawableStart="@drawable/menu_ic_calendar"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						style="@style/Text.Link"
					/>

					<com.google.android.material.textview.MaterialTextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/view_stats"
						android:text="View stats"
						android:drawableStart="@drawable/menu_ic_calendar"
						app:layout_constraintTop_toBottomOf="@id/view_logs"
						app:layout_constraintStart_toStartOf="parent"
						style="@style/Text.Link.End"
					/>
				</androidx.constraintlayout.widget.ConstraintLayout>
			</com.google.android.material.card.MaterialCardView>
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/menu_fab"
		android:layout_gravity="bottom|end"
		app:srcCompat="@drawable/ic_add"
		app:tint="?textOnAccent"
		app:backgroundTint="?colorAccent"
		android:layout_margin="16dp"
		app:layout_dodgeInsetEdges="all"
	/>

	<com.google.android.material.circularreveal.CircularRevealFrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/sheet"
		android:background="#47000000"
		android:visibility="invisible"
		app:layout_behavior="com.google.android.material.transformation.FabTransformationSheetBehavior"
	>
		<com.google.android.material.card.MaterialCardView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|end"
			android:layout_margin="16dp"
		>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
			>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/menu_action1"
					android:orientation="horizontal"
					android:paddingStart="18dp"
					android:paddingEnd="18dp"
					android:paddingTop="12dp"
					android:paddingBottom="12dp"
					android:background="?selectableItemBackground"
					android:clickable="true"
					android:focusable="true"
				>
					<ImageView
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:padding="4dp"
						app:srcCompat="@drawable/ic_calendar"
						app:tint="?textOnSurface"
					/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:text="Water"
						android:textSize="16sp"
						android:layout_marginStart="18dp"
						android:gravity="center_vertical"
					/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/menu_action2"
					android:orientation="horizontal"
					android:paddingStart="18dp"
					android:paddingEnd="18dp"
					android:paddingTop="12dp"
					android:paddingBottom="12dp"
					android:background="?selectableItemBackground"
					android:clickable="true"
					android:focusable="true"
				>
					<ImageView
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:padding="4dp"
						app:srcCompat="@drawable/ic_calendar"
						app:tint="?textOnSurface"
					/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:text="Transplant"
						android:textSize="16sp"
						android:layout_marginStart="18dp"
						android:gravity="center_vertical"
					/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/menu_action3"
					android:orientation="horizontal"
					android:paddingStart="18dp"
					android:paddingEnd="18dp"
					android:paddingTop="12dp"
					android:paddingBottom="12dp"
					android:background="?selectableItemBackground"
					android:clickable="true"
					android:focusable="true"
				>
					<ImageView
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:padding="4dp"
						app:srcCompat="@drawable/ic_calendar"
						app:tint="?textOnSurface"
					/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:text="Environment"
						android:textSize="16sp"
						android:layout_marginStart="18dp"
						android:gravity="center_vertical"
					/>
				</LinearLayout>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:minWidth="240dp"
					android:text="log action"
					app:drawableTint="#ffffff"
					android:gravity="center_horizontal"
					android:padding="16dp"
					android:textSize="16sp"
					android:textColor="#ffffff"
					android:fontFamily="sans-serif-smallcaps"
					android:textStyle="bold"
					android:background="?colorAccent"
				/>
			</LinearLayout>
		</com.google.android.material.card.MaterialCardView>
	</com.google.android.material.circularreveal.CircularRevealFrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
