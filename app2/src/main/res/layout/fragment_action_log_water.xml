<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="16dp"
>
	<com.google.android.material.textfield.TextInputLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/water_ph"
		android:hint="pH"
		style="@style/Input"
		android:layout_marginEnd="6dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/water_runoff"
	>
		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:imeOptions="actionNext"
			android:maxLines="1"
			android:singleLine="true"
			android:inputType="numberDecimal"
		/>
	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/water_runoff"
		android:hint="Runoff"
		style="@style/Input"
		android:layout_marginStart="6dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toEndOf="@id/water_ph"
		app:layout_constraintEnd_toEndOf="parent"
	>
		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:imeOptions="actionNext"
			android:maxLines="1"
			android:singleLine="true"
			android:inputType="numberDecimal"
		/>
	</com.google.android.material.textfield.TextInputLayout>

	<me.anon.grow3.view.CropSelectView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/crop_select_view"
		android:layout_marginTop="@dimen/section_header_spacing"
		app:layout_constraintTop_toBottomOf="@id/water_ph"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
	/>
</androidx.constraintlayout.widget.ConstraintLayout>
