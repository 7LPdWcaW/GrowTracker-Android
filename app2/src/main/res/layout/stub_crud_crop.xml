<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="12dp"
	android:paddingBottom="12dp"
	android:paddingStart="6dp"
	android:paddingEnd="6dp"
	android:clickable="true"
	android:focusable="true"
	android:background="?selectableItemBackground"
>
	<com.google.android.material.imageview.ShapeableImageView
		android:layout_width="64dp"
		android:layout_height="64dp"
		android:id="@+id/crop_image"
		android:scaleType="centerCrop"
		android:adjustViewBounds="true"
		app:shapeAppearanceOverlay="@style/CircleImage"
		app:srcCompat="@drawable/ic_default_icon_drawable"
		android:background="?colorSecondary"
		android:duplicateParentState="true"
		android:foreground="@drawable/circular_selectable_item_background"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		android:transitionName="crop_image"
	/>

	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/crop_name"
		android:layout_gravity="center_horizontal"
		android:layout_marginStart="12dp"
		android:layout_marginEnd="12dp"
		app:layout_constraintStart_toEndOf="@id/crop_image"
		app:layout_constraintTop_toTopOf="@id/crop_image"
		app:layout_constraintBottom_toTopOf="@id/crop_genetics"
		app:layout_constraintEnd_toStartOf="@id/duplicate"
		tools:text="Crop 1"
		android:textSize="18sp"
		android:transitionName="crop_name"
		style="@style/Text.Header.Sub"
	/>

	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/crop_genetics"
		android:layout_gravity="center_horizontal"
		android:layout_marginStart="12dp"
		android:layout_marginEnd="12dp"
		app:layout_constraintStart_toEndOf="@id/crop_image"
		app:layout_constraintTop_toBottomOf="@id/crop_name"
		app:layout_constraintBottom_toBottomOf="@id/crop_image"
		app:layout_constraintEnd_toStartOf="@id/duplicate"
		tools:text="Unknown genetics"
		android:transitionName="crop_genetics"
		style="@style/Text"
	/>

	<com.google.android.material.button.MaterialButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/duplicate"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:icon="@drawable/ic_copy"
		app:iconTint="?textOnSurface"
		android:minWidth="0dp"
		android:minHeight="0dp"
		style="@style/Button.Text"
	/>
</androidx.constraintlayout.widget.ConstraintLayout>
