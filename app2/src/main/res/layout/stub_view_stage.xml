<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
>
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center"
		android:padding="8dp"
	>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxWidth="200dp"
			android:id="@+id/stage_label"
			android:layout_marginBottom="4dp"
			app:layout_constraintBottom_toTopOf="@id/stage_icon"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:text="Today"
			style="@style/Text.Caption"
		/>

		<ImageView
			android:layout_width="72dp"
			android:layout_height="72dp"
			android:id="@+id/stage_icon"
			android:padding="18dp"
			app:srcCompat="@drawable/ic_calendar"
			android:background="@drawable/circular_stroke_background"
			android:clickable="true"
			android:focusable="true"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
		/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxWidth="200dp"
			android:id="@+id/stage_date"
			android:layout_marginTop="4dp"
			app:layout_constraintTop_toBottomOf="@id/stage_icon"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:text="01/01/00"
			style="@style/Text.Caption"
		/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
