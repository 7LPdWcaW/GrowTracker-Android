<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/content"
>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clipToPadding="false"
		android:fillViewport="true"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clipToPadding="false"
			android:orientation="vertical"
			android:paddingBottom="72dp"
		>
			<com.google.android.material.card.MaterialCardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/Card"
			>
				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="16dp"
					android:paddingBottom="16dp"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/header"
						android:text="@string/add_diary_crops_title"
						android:layout_marginStart="16dp"
						android:layout_marginEnd="16dp"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						android:textAppearance="@style/Text.Header"
					/>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/crops_container"
						android:divider="@drawable/divider"
						android:showDividers="middle"
						android:orientation="vertical"
						android:layout_marginStart="8dp"
						android:layout_marginEnd="8dp"
						app:layout_constraintTop_toBottomOf="@id/header"
						app:layout_constraintBottom_toTopOf="@id/add_crop"
						android:layout_marginBottom="@dimen/section_spacing"
						android:layout_marginTop="@dimen/section_spacing"
					/>

					<Button
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/add_crop"
						android:text="@string/add_diary_crops_add"
						android:layout_marginStart="16dp"
						android:layout_marginEnd="16dp"
						style="@style/Button.Text"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
					/>
				</androidx.constraintlayout.widget.ConstraintLayout>
			</com.google.android.material.card.MaterialCardView>
		</LinearLayout>
	</ScrollView>
</FrameLayout>
