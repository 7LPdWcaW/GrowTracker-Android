<resources>
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="textOnPrimary">@color/textOnPrimary</item>

		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>

		<item name="colorAccent">@color/colorAccent</item>
		<item name="textOnAccent">#ffffff</item>

		<item name="colorSurface">@color/colorSurface</item>
		<item name="textOnSurface">@color/textOnSurface</item>

		<item name="colorSecondary">@color/colorSecondary</item>
		<item name="colorControlNormal">@color/colorSecondary</item>
		<item name="colorControlActivated">@color/colorSecondary</item>

		<item name="colorControlHighlight">@color/colorAccent26</item>

		<item name="styleButton">@style/Button</item>
		<item name="styleButtonBordered">@style/Button.Bordered</item>
		<item name="styleButtonText">@style/Button.Text</item>
		<item name="styleCard">@style/Card</item>
		<item name="styleLogCard">@style/Card.Log</item>
		<item name="styleHeaderText">@style/Text.Header</item>
		<item name="styleSubHeaderText">@style/Text.Header.Sub</item>
		<item name="styleLinkText">@style/Text.Link</item>
		<item name="styleCaptionText">@style/Text.Caption</item>

		<item name="android:textColor">?textOnSurface</item>
		<item name="android:windowBackground">@drawable/window_background</item>
		<item name="android:windowTranslucentNavigation">true</item>
	</style>

	<style name="AppTheme.FullScrim">
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">true</item>
	</style>

	<!-- -->
	<style name="Card" parent="Widget.MaterialComponents.CardView">
		<item name="cardBackgroundColor">?colorSurface</item>
		<item name="cardUseCompatPadding">true</item>
		<item name="cardElevation">4dp</item>
		<item name="cardCornerRadius">8dp</item>
	</style>

	<style name="CardLogTheme">
<!--		<item name="textOnSurface">#ffffff</item>-->
	</style>

	<style name="Card.Log">
		<item name="android:theme">@style/CardLogTheme</item>
		<item name="cardBackgroundColor">#D4EAE5</item>
<!--		<item name="cardBackgroundColor">#F3E1E3</item>-->
	</style>

	<style name="ShapeAppearance" parent="ShapeAppearance.MaterialComponents.LargeComponent">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">8dp</item>
	</style>

	<style name="Button" parent="Widget.MaterialComponents.Button">
		<item name="android:padding">16dp</item>
		<item name="backgroundTint">?colorAccent</item>
		<item name="android:textColor">?textOnAccent</item>
		<item name="shapeAppearance">@style/ShapeAppearance</item>
	</style>

	<style name="Button.Bordered" parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="shapeAppearance">@style/ShapeAppearance</item>
		<item name="android:textColor">?colorAccent</item>
		<item name="strokeColor">?colorAccent</item>
		<item name="android:padding">16dp</item>
	</style>

	<style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
		<item name="shapeAppearance">@style/ShapeAppearance</item>
		<item name="android:textColor">?colorAccent</item>
		<item name="android:padding">16dp</item>
	</style>

	<style name="Text">
		<item name="android:textColor">?textOnSurface</item>
		<item name="android:textSize">16sp</item>
		<item name="android:lineSpacingMultiplier">1.2</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>

	<style name="Text.Header">
		<item name="android:fontFamily">sans-serif-light</item>
		<item name="android:textSize">22sp</item>
		<item name="android:paddingBottom">8dp</item>
	</style>

	<style name="Text.Header.Sub">
		<item name="android:textSize">18sp</item>
		<item name="android:paddingBottom">0dp</item>
	</style>

	<style name="Text.Link">
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingStart">12dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">@drawable/link_drawable</item>
		<item name="android:drawableEnd">@drawable/ic_arrow_forward</item>
		<item name="android:drawableStart">@drawable/ic_empty</item>
		<item name="android:drawablePadding">16dp</item>
		<item name="android:foreground">@drawable/rounded_selectable_item_background</item>
		<item name="drawableTint">@color/text_surface_color</item>
		<item name="android:textColor">@color/text_surface_color</item>
		<item name="android:minHeight">72dp</item>
	</style>

	<style name="Text.Caption">
		<item name="android:textSize">12sp</item>
		<item name="android:fontFamily">sans-serif-smallcaps</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="CircleImage">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">50%</item>
	</style>

	<style name="RoundedImage">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSize">8dp</item>
	</style>
</resources>
