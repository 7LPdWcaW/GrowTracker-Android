<?xml version="1.0" encoding="utf-8"?>

<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:elevation="4dp"
			style="@style/PaperCard"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/general_title"
				style="@style/SectionTitle"
			/>

			<com.google.android.flexbox.FlexboxLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/data_container"
				android:padding="16dp"
				android:orientation="vertical"
				app:showDivider="middle"
				app:dividerDrawable="@drawable/divider_8dp"
			/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/lighting_title"
				android:layout_marginTop="12dp"
				style="@style/SectionTitle"
			/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:divider="@drawable/vertical_full_divider"
				android:showDividers="middle"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:layout_marginTop="16dp"
				android:weightSum="2"
			>
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/lightson_container"
					android:orientation="vertical"
					android:layout_weight="1"
					android:background="?selectableItemBackground"
					android:clickable="true"
					android:focusable="true"
				>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/lighton_label"
						android:text="Lights on"
						style="@style/SubsectionTitle"
					/>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/lighton_input"
						android:hint="00:00"
						android:inputType="none"
						android:paddingTop="8dp"
						android:paddingBottom="8dp"
						style="@style/SubsectionSubTitle"
					/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/lightsoff_container"
					android:clickable="true"
					android:focusable="true"
					android:orientation="vertical"
					android:layout_weight="1"
					android:background="?selectableItemBackground"
				>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/lightoff_label"
						android:text="Lights off"
						style="@style/SubsectionTitle"
					/>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/lightoff_input"
						android:hint="18:00"
						android:inputType="none"
						android:paddingTop="8dp"
						android:paddingBottom="8dp"
						style="@style/SubsectionSubTitle"
					/>
				</LinearLayout>
			</LinearLayout>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="16dp"
				android:paddingRight="16dp"
				android:paddingTop="16dp"
				android:paddingBottom="16dp"
			>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/progresson_label"
					android:text="18h"
					android:drawableStart="@drawable/ic_sun"
					android:drawablePadding="4dp"
					android:gravity="center_vertical"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintStart_toStartOf="parent"
				/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/progressoff_label"
					android:text="6h"
					android:drawablePadding="4dp"
					android:drawableEnd="@drawable/ic_moon"
					android:gravity="center_vertical"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
				/>

				<SeekBar
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/light_ratio"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toBottomOf="@id/progresson_label"
					android:max="96"
					android:progress="72"
				/>
			</androidx.constraintlayout.widget.ConstraintLayout>
		</LinearLayout>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/temp_container"
			android:orientation="vertical"
			android:layout_marginTop="8dp"
			android:elevation="4dp"
			android:paddingTop="0dp"
			style="@style/PaperCard"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/temperature_title_label"
				android:text="@string/temperature_title"
				android:layout_marginTop="16dp"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				style="@style/SectionTitle"
			/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/edit_temp"
				android:text="@string/edit"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="@id/temperature_title_label"
				app:layout_constraintBottom_toBottomOf="@id/temperature_title_label"
				android:layout_marginTop="4dp"
				android:visibility="gone"
				style="?borderlessButtonStyle"
			/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/delete_temp"
				android:text="@string/delete"
				app:layout_constraintEnd_toStartOf="@id/edit_temp"
				app:layout_constraintTop_toTopOf="@id/temperature_title_label"
				app:layout_constraintBottom_toBottomOf="@id/temperature_title_label"
				android:layout_marginTop="4dp"
				android:visibility="gone"
				style="?borderlessButtonStyle"
			/>

			<com.github.mikephil.charting.charts.LineChart
				android:layout_width="match_parent"
				android:layout_height="300dp"
				android:id="@+id/temp"
				android:padding="16dp"
				android:layout_marginTop="24dp"
				app:layout_constraintTop_toBottomOf="@id/temperature_title_label"
			/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="16dp"
				app:layout_constraintTop_toBottomOf="@id/temp"
			>
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_weight="1"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/min"
						android:gravity="center_vertical"
						style="@style/SubsectionTitle"
						android:textColor="?android:textColorPrimary"
					/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/min_temp"
						android:textSize="14sp"
						android:layout_marginLeft="8dp"
						android:fontFamily="sans-serif-light"
						android:gravity="center_vertical"
						android:textColor="?android:textColorPrimary"
					/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_weight="1"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/max"
						android:gravity="center_vertical"
						style="@style/SubsectionTitle"
						android:textColor="?android:textColorPrimary"
					/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/max_temp"
						android:textSize="14sp"
						android:layout_marginLeft="8dp"
						android:fontFamily="sans-serif-light"
						android:gravity="center_vertical"
						android:textColor="?android:textColorPrimary"
					/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_weight="1"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/ave"
						android:gravity="center_vertical"
						style="@style/SubsectionTitle"
						android:textColor="?android:textColorPrimary"
					/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/ave_temp"
						android:textSize="14sp"
						android:textColor="?android:textColorPrimary"
						android:layout_marginLeft="8dp"
						android:fontFamily="sans-serif-light"
						android:gravity="center_vertical"
					/>
				</LinearLayout>
			</LinearLayout>
		</androidx.constraintlayout.widget.ConstraintLayout>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/humidity_container"
			android:orientation="vertical"
			android:layout_marginTop="8dp"
			android:elevation="4dp"
			android:paddingTop="0dp"
			style="@style/PaperCard"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/humidity_label"
				android:text="@string/humidity"
				android:layout_marginTop="16dp"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				style="@style/SectionTitle"
			/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/edit_humidity"
				android:text="@string/edit"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="@id/humidity_label"
				app:layout_constraintBottom_toBottomOf="@id/humidity_label"
				android:layout_marginTop="4dp"
				android:visibility="gone"
				style="?borderlessButtonStyle"
			/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/delete_humidity"
				android:text="@string/delete"
				app:layout_constraintEnd_toStartOf="@id/edit_humidity"
				app:layout_constraintTop_toTopOf="@id/humidity_label"
				app:layout_constraintBottom_toBottomOf="@id/humidity_label"
				android:layout_marginTop="4dp"
				android:visibility="gone"
				style="?borderlessButtonStyle"
			/>

			<com.github.mikephil.charting.charts.LineChart
				android:layout_width="match_parent"
				android:layout_height="300dp"
				android:id="@+id/humidity"
				android:padding="16dp"
				app:layout_constraintTop_toBottomOf="@id/humidity_label"
				android:layout_marginTop="24dp"
			/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="16dp"
				app:layout_constraintTop_toBottomOf="@id/humidity"
			>
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_weight="1"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/min"
						android:gravity="center_vertical"
						style="@style/SubsectionTitle"
						android:textColor="?android:textColorPrimary"
					/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/min_humidity"
						android:textSize="14sp"
						android:layout_marginLeft="8dp"
						android:fontFamily="sans-serif-light"
						android:gravity="center_vertical"
						android:textColor="?android:textColorPrimary"
					/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_weight="1"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/max"
						android:gravity="center_vertical"
						style="@style/SubsectionTitle"
						android:textColor="?android:textColorPrimary"
					/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/max_humidity"
						android:textSize="14sp"
						android:layout_marginLeft="8dp"
						android:fontFamily="sans-serif-light"
						android:gravity="center_vertical"
						android:textColor="?android:textColorPrimary"
					/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_weight="1"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/ave"
						android:gravity="center_vertical"
						style="@style/SubsectionTitle"
						android:textColor="?android:textColorPrimary"
					/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/ave_humidity"
						android:textSize="14sp"
						android:textColor="?android:textColorPrimary"
						android:layout_marginLeft="8dp"
						android:fontFamily="sans-serif-light"
						android:gravity="center_vertical"
					/>
				</LinearLayout>
			</LinearLayout>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</LinearLayout>
</ScrollView>
