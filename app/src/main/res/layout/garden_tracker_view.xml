<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
>
	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/details_container"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
		>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:elevation="4dp"
				style="@style/PaperCard"
			>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/general_title"
					android:text="@string/general_title"
					style="@style/SectionTitle"
				/>

				<com.google.android.flexbox.FlexboxLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/data_container"
					android:visibility="gone"
					android:padding="16dp"
					android:orientation="vertical"
					android:layout_marginBottom="12dp"
					app:showDivider="middle"
					app:dividerDrawable="@drawable/divider_8dp"
				/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/light_title"
					style="@style/SectionTitle"
				/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:divider="@drawable/vertical_full_divider"
					android:showDividers="middle"
					android:paddingStart="16dp"
					android:paddingEnd="16dp"
					android:layout_marginTop="16dp"
					android:weightSum="2"
				>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/light_type_container"
						android:orientation="vertical"
						android:padding="16dp"
						android:background="?selectableItemBackground"
					>
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/light_type_label"
							style="@style/SubsectionTitle"
						/>

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/light_type"
							android:text="@string/led"
							style="@style/SubsectionSubTitle"
						/>
					</LinearLayout>
				</LinearLayout>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/lighting_title"
					style="@style/SectionTitle"
				/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:divider="@drawable/vertical_full_divider"
					android:showDividers="middle"
					android:paddingStart="16dp"
					android:paddingEnd="16dp"
					android:layout_marginTop="16dp"
					android:weightSum="2"
				>
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/lightson_container"
						android:orientation="vertical"
						android:layout_weight="1"
						android:background="?selectableItemBackground"
						android:clickable="true"
						android:focusable="true"
					>
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/lighton_label"
							android:text="@string/lights_on"
							style="@style/SubsectionTitle"
						/>

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/lighton_input"
							android:hint="00:00"
							android:inputType="none"
							android:paddingTop="8dp"
							android:paddingBottom="8dp"
							style="@style/SubsectionSubTitle"
						/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/lightsoff_container"
						android:clickable="true"
						android:focusable="true"
						android:orientation="vertical"
						android:layout_weight="1"
						android:background="?selectableItemBackground"
					>
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/lightoff_label"
							android:text="@string/lights_off"
							style="@style/SubsectionTitle"
						/>

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/lightoff_input"
							android:hint="18:00"
							android:inputType="none"
							android:paddingTop="8dp"
							android:paddingBottom="8dp"
							style="@style/SubsectionSubTitle"
						/>
					</LinearLayout>
				</LinearLayout>

				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="16dp"
					android:paddingRight="16dp"
					android:paddingTop="16dp"
					android:paddingBottom="16dp"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/progresson_label"
						android:drawableStart="@drawable/ic_sun"
						android:drawablePadding="4dp"
						android:gravity="center_vertical"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toStartOf="parent"
					/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/progressoff_label"
						android:drawablePadding="4dp"
						android:drawableEnd="@drawable/ic_moon"
						android:gravity="center_vertical"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
					/>

					<SeekBar
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:id="@+id/light_ratio"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintTop_toBottomOf="@id/progresson_label"
						android:max="96"
						android:progress="72"
					/>
				</androidx.constraintlayout.widget.ConstraintLayout>
			</LinearLayout>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/temp_container"
				android:orientation="vertical"
				android:layout_marginTop="8dp"
				android:elevation="4dp"
				android:paddingTop="0dp"
				style="@style/PaperCard"
			>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/temperature_title_label"
					android:text="@string/temperature_title"
					android:layout_marginTop="16dp"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					style="@style/SectionTitle"
				/>

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/edit_temp"
					android:text="@string/edit"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toTopOf="@id/temperature_title_label"
					app:layout_constraintBottom_toBottomOf="@id/temperature_title_label"
					android:layout_marginEnd="4dp"
					android:visibility="gone"
					style="?borderlessButtonStyle"
				/>

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/delete_temp"
					android:text="@string/delete"
					app:layout_constraintEnd_toStartOf="@id/edit_temp"
					app:layout_constraintTop_toTopOf="@id/temperature_title_label"
					app:layout_constraintBottom_toBottomOf="@id/temperature_title_label"
					android:visibility="gone"
					style="?borderlessButtonStyle"
				/>

				<com.github.mikephil.charting.charts.LineChart
					android:layout_width="match_parent"
					android:layout_height="300dp"
					android:id="@+id/temp"
					android:padding="16dp"
					android:layout_marginTop="24dp"
					app:layout_constraintTop_toBottomOf="@id/temperature_title_label"
				/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:padding="16dp"
					app:layout_constraintTop_toBottomOf="@id/temp"
				>
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_weight="1"
					>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/min"
							android:gravity="center_vertical"
							style="@style/SubsectionTitle"
							android:textColor="?android:textColorPrimary"
						/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/min_temp"
							android:textSize="14sp"
							android:layout_marginLeft="8dp"
							android:fontFamily="sans-serif-light"
							android:gravity="center_vertical"
							android:textColor="?android:textColorPrimary"
						/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_weight="1"
					>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/max"
							android:gravity="center_vertical"
							style="@style/SubsectionTitle"
							android:textColor="?android:textColorPrimary"
						/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/max_temp"
							android:textSize="14sp"
							android:layout_marginLeft="8dp"
							android:fontFamily="sans-serif-light"
							android:gravity="center_vertical"
							android:textColor="?android:textColorPrimary"
						/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_weight="1"
					>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/ave"
							android:gravity="center_vertical"
							style="@style/SubsectionTitle"
							android:textColor="?android:textColorPrimary"
						/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/ave_temp"
							android:textSize="14sp"
							android:textColor="?android:textColorPrimary"
							android:layout_marginLeft="8dp"
							android:fontFamily="sans-serif-light"
							android:gravity="center_vertical"
						/>
					</LinearLayout>
				</LinearLayout>
			</androidx.constraintlayout.widget.ConstraintLayout>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/humidity_container"
				android:orientation="vertical"
				android:layout_marginTop="8dp"
				android:elevation="4dp"
				android:paddingTop="0dp"
				style="@style/PaperCard"
			>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/humidity_label"
					android:text="@string/humidity"
					android:layout_marginTop="16dp"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					style="@style/SectionTitle"
				/>

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/edit_humidity"
					android:text="@string/edit"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toTopOf="@id/humidity_label"
					app:layout_constraintBottom_toBottomOf="@id/humidity_label"
					android:layout_marginEnd="4dp"
					android:visibility="gone"
					style="?borderlessButtonStyle"
				/>

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/delete_humidity"
					android:text="@string/delete"
					app:layout_constraintEnd_toStartOf="@id/edit_humidity"
					app:layout_constraintTop_toTopOf="@id/humidity_label"
					app:layout_constraintBottom_toBottomOf="@id/humidity_label"
					android:visibility="gone"
					style="?borderlessButtonStyle"
				/>

				<com.github.mikephil.charting.charts.LineChart
					android:layout_width="match_parent"
					android:layout_height="300dp"
					android:id="@+id/humidity"
					android:padding="16dp"
					app:layout_constraintTop_toBottomOf="@id/humidity_label"
					android:layout_marginTop="24dp"
				/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:padding="16dp"
					app:layout_constraintTop_toBottomOf="@id/humidity"
				>
					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_weight="1"
					>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/min"
							android:gravity="center_vertical"
							style="@style/SubsectionTitle"
							android:textColor="?android:textColorPrimary"
						/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/min_humidity"
							android:textSize="14sp"
							android:layout_marginLeft="8dp"
							android:fontFamily="sans-serif-light"
							android:gravity="center_vertical"
							android:textColor="?android:textColorPrimary"
						/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_weight="1"
					>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/max"
							android:gravity="center_vertical"
							style="@style/SubsectionTitle"
							android:textColor="?android:textColorPrimary"
						/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/max_humidity"
							android:textSize="14sp"
							android:layout_marginLeft="8dp"
							android:fontFamily="sans-serif-light"
							android:gravity="center_vertical"
							android:textColor="?android:textColorPrimary"
						/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_weight="1"
					>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/ave"
							android:gravity="center_vertical"
							style="@style/SubsectionTitle"
							android:textColor="?android:textColorPrimary"
						/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/ave_humidity"
							android:textSize="14sp"
							android:textColor="?android:textColorPrimary"
							android:layout_marginLeft="8dp"
							android:fontFamily="sans-serif-light"
							android:gravity="center_vertical"
						/>
					</LinearLayout>
				</LinearLayout>
			</androidx.constraintlayout.widget.ConstraintLayout>

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/fake_actions_container"
				android:orientation="vertical"
				android:elevation="4dp"
				android:paddingTop="0dp"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="24dp"
				style="@style/PaperCard"
			>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/fake_actions_label"
					android:text="@string/actions"
					android:layout_marginTop="16dp"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					style="@style/SectionTitle"
				/>

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/fake_toggle_actions"
					android:text="@string/show"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					android:layout_marginEnd="4dp"
					style="?borderlessButtonStyle"
				/>
			</androidx.constraintlayout.widget.ConstraintLayout>
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/actions_container"
		android:orientation="vertical"
		android:paddingTop="0dp"
		android:layout_marginBottom="0dp"
		android:visibility="gone"
		style="@style/PaperCard"
	>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/actions_label"
			android:text="@string/actions"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			style="@style/SectionTitle"
		/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/toggle_actions"
			android:text="@string/hide"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginEnd="4dp"
			style="?borderlessButtonStyle"
		/>

		<androidx.recyclerview.widget.RecyclerView
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:id="@+id/actions_recycler"
			android:padding="8dp"
			android:clipToPadding="false"
			android:clipChildren="false"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toBottomOf="@id/toggle_actions"
		/>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/empty"
			android:layout_gravity="center"
			android:orientation="vertical"
			app:layout_constraintTop_toBottomOf="@id/toggle_actions"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
		>
			<ImageView
				android:layout_width="@dimen/empty_size"
				android:layout_height="@dimen/empty_size"
				app:srcCompat="@drawable/ic_cog"
				app:tint="?android:textColorTertiary"
				android:layout_gravity="center_horizontal"
				android:alpha="0.2"
			/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="@string/empty_actions_list"
				android:textColor="?android:textColorTertiary"
				android:layout_marginTop="12dp"
				android:layout_gravity="center_horizontal"
			/>
		</LinearLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
