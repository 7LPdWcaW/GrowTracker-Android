<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingBottom="8dp"
>
	<LinearLayout
		android:layout_width="72dp"
		android:layout_height="wrap_content"
		android:id="@+id/date_container"
		android:orientation="vertical"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
	>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/date_day"
			android:textSize="16sp"
		/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/stage_day"
			android:textSize="12sp"
			android:layout_marginTop="4dp"
		/>
	</LinearLayout>

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/card"
		app:cardBackgroundColor="#90CAF9"
		app:cardCornerRadius="4dp"
		app:cardElevation="0dp"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingBottom="12dp"
			android:paddingStart="8dp"
		>
			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/content_container"
			>
				<ImageButton
					android:layout_width="42dp"
					android:layout_height="42dp"
					android:id="@+id/overflow"
					android:src="@drawable/ic_overflow"
					android:background="@null"
					android:adjustViewBounds="true"
					android:tint="#333333"
					android:padding="12dp"
					android:visibility="gone"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toTopOf="parent"
				/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="42dp"
					android:id="@+id/date"
					android:textSize="14sp"
					android:textColor="#666666"
					android:gravity="center"
					android:layout_gravity="center_vertical"
					android:fontFamily="sans-serif-light"
					app:layout_constraintTop_toTopOf="@id/overflow"
					app:layout_constraintEnd_toStartOf="@id/overflow"
					tools:text="(20m ago)"
				/>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/name"
					android:paddingEnd="8dp"
					android:paddingStart="8dp"
					android:minHeight="42dp"
					android:gravity="center_vertical"
					app:layout_constraintTop_toTopOf="@id/date"
					app:layout_constraintEnd_toStartOf="@id/date"
					app:layout_constraintStart_toStartOf="parent"
					tools:text="Very Long Action name"
					style="@style/SubsectionTitle"
				/>

				<androidx.constraintlayout.widget.Barrier
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:id="@+id/title_barrier"
					app:barrierDirection="bottom"
					app:constraint_referenced_ids="name,overflow,date"
				/>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/full_date"
					android:textSize="14sp"
					android:textColor="#666666"
					android:fontFamily="sans-serif-light"
					android:layout_below="@id/name"
					android:paddingEnd="8dp"
					android:paddingStart="8dp"
					app:layout_constraintTop_toBottomOf="@id/title_barrier"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
				/>
			</androidx.constraintlayout.widget.ConstraintLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/summary"
				android:layout_marginLeft="12dp"
				android:layout_marginRight="12dp"
				android:layout_marginTop="8dp"
				style="@style/SubsectionSubTitle"
			/>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>
