<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/action_container"
			android:orientation="horizontal"
			android:background="#ffffff"
			android:elevation="4dp"
			android:divider="@drawable/vertical_full_divider"
			android:showDividers="middle"
			android:dividerPadding="8dp"
			android:padding="0dp"
			android:visibility="gone"
			style="@style/PaperCard"
		>
			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:id="@+id/feeding"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:gravity="center"
				android:paddingBottom="16dp"
				android:paddingTop="16dp"
				android:text="@string/action_feed"
			/>

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:id="@+id/action"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:gravity="center"
				android:paddingBottom="16dp"
				android:paddingTop="16dp"
				android:text="@string/action_action"
			/>

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:id="@+id/note"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:gravity="center"
				android:paddingBottom="16dp"
				android:paddingTop="16dp"
				android:text="@string/action_note"
			/>
		</LinearLayout>

		<androidx.recyclerview.widget.RecyclerView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/recycler_view"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:paddingTop="8dp"
			android:paddingBottom="88dp"
			android:clipToPadding="false"
		/>
	</LinearLayout>

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/fab_add"
		app:srcCompat="@drawable/ic_floting_add"
		android:layout_gravity="bottom|end"
		android:layout_margin="16dp"
	/>
</FrameLayout>
