<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingBottom="88dp"
		>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="#ffffff"
				android:elevation="4dp"
				style="@style/PaperCard"
			>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Water details"
					style="@style/SectionTitle"
				/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:divider="@drawable/full_divider"
					android:showDividers="middle"
					android:layout_marginTop="16dp"
				>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:paddingLeft="16dp"
						android:paddingRight="16dp"
						android:paddingTop="8dp"
						android:paddingBottom="8dp"
						android:divider="@drawable/vertical_full_divider"
						android:showDividers="middle"
					>
						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:orientation="vertical"
							android:layout_weight="1"
							android:weightSum="3"
						>
							<TextView
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:text="Water PH"
								style="@style/SubsectionTitle"
							/>

							<EditText
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:id="@+id/water_ph"
								android:hint="6.4"
								android:inputType="numberDecimal"
								android:layout_gravity="bottom"
								android:nextFocusDown="@+id/water_ppm"
								style="@style/SubsectionSubTitle"
							/>
						</LinearLayout>

						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:orientation="vertical"
							android:layout_weight="1"
						>
							<TextView
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:text="PPM"
								style="@style/SubsectionTitle"
							/>

							<EditText
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:id="@+id/water_ppm"
								android:hint="250"
								android:inputType="numberSigned"
								android:layout_gravity="bottom"
								android:nextFocusDown="@+id/runoff_ph"
								style="@style/SubsectionSubTitle"
							/>
						</LinearLayout>

						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:orientation="vertical"
							android:layout_weight="1"
						>
							<TextView
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:text="Runoff"
								style="@style/SubsectionTitle"
							/>

							<EditText
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:id="@+id/runoff_ph"
								android:hint="6.4"
								android:inputType="numberDecimal"
								android:layout_gravity="bottom"
								android:nextFocusDown="@+id/amount"
								style="@style/SubsectionSubTitle"
							/>
						</LinearLayout>
					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:paddingLeft="16dp"
						android:paddingRight="16dp"
						android:paddingTop="16dp"
						android:paddingBottom="16dp"
						android:divider="@drawable/vertical_full_divider"
						android:showDividers="middle"
						android:weightSum="3"
					>
						<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_weight="1"
						>
							<TextView
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:text="Amount (ml)"
								style="@style/SubsectionTitle"
							/>

							<EditText
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:id="@+id/amount"
								android:hint="250ml"
								android:inputType="numberSigned"
								android:nextFocusDown="@+id/date"
								style="@style/SubsectionSubTitle"
							/>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="#ffffff"
				android:layout_marginTop="8dp"
				android:elevation="4dp"
				style="@style/PaperCard"
			>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Date and time"
					style="@style/SectionTitle"
				/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:divider="@drawable/full_divider"
					android:showDividers="middle"
					android:layout_marginTop="16dp"
				>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/date_container"
						android:orientation="vertical"
						android:paddingLeft="16dp"
						android:paddingRight="16dp"
						android:paddingTop="8dp"
						android:paddingBottom="16dp"
					>
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Date"
							style="@style/SubsectionTitle"
						/>

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/date"
							android:editable="false"
							android:inputType="none"
							android:text="Today"
							android:nextFocusDown="@+id/nutrient"
							style="@style/SubsectionSubTitle"
						/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/nutrient_container"
				android:orientation="vertical"
				android:background="#ffffff"
				android:layout_marginTop="8dp"
				android:elevation="4dp"
				style="@style/PaperCard"
			>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Nutrients"
					style="@style/SectionTitle"
				/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:divider="@drawable/full_divider"
					android:showDividers="middle"
					android:layout_marginTop="16dp"
				>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/nutrient_nutrient_container"
						android:orientation="vertical"
						android:focusable="true"
						android:paddingLeft="16dp"
						android:paddingRight="16dp"
						android:paddingTop="8dp"
						android:paddingBottom="16dp"
					>
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Nutrient"
							style="@style/SubsectionTitle"
						/>

						<EditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/nutrient"
							android:editable="false"
							android:inputType="none"
							android:text="N/A"
							android:nextFocusDown="@+id/nutrient_amount"
							android:background="@null"
							style="@style/SubsectionSubTitle"
						/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:paddingLeft="16dp"
						android:paddingRight="16dp"
						android:paddingTop="16dp"
						android:paddingBottom="16dp"
					>
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Amount (ml/l)"
							style="@style/SubsectionTitle"
						/>

						<EditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/nutrient_amount"
							android:hint="0ml"
							android:inputType="numberDecimal"
							android:nextFocusDown="@+id/notes"
							style="@style/SubsectionSubTitle"
						/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="#ffffff"
				android:layout_marginTop="8dp"
				android:elevation="4dp"
				style="@style/PaperCard"
			>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Notes"
					style="@style/SectionTitle"
				/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:divider="@drawable/full_divider"
					android:showDividers="middle"
					android:layout_marginTop="16dp"
				>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:paddingLeft="16dp"
						android:paddingRight="16dp"
						android:paddingTop="8dp"
						android:paddingBottom="16dp"
					>
						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Notes"
							style="@style/SubsectionTitle"
						/>

						<EditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/notes"
							android:inputType="none"
							android:lines="4"
							android:gravity="top"
							style="@style/SubsectionSubTitle"
						/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/fab_complete"
		android:layout_gravity="bottom|right"
		android:layout_margin="16dp"
	>
		<ImageView
			android:layout_width="57dp"
			android:layout_height="56dp"
			android:layout_marginTop="3dp"
			android:src="@drawable/fab_button_shadow"
			android:layout_gravity="center_horizontal"
		/>

		<FrameLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		>
			<ImageView
				android:layout_width="56dp"
				android:layout_height="56dp"
				android:background="@drawable/complete_button_bg"
			/>

			<ImageView
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_gravity="center"
				android:src="@drawable/ic_floting_done"
			/>
		</FrameLayout>
	</FrameLayout>
</FrameLayout>
